<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sixth Man</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <% if (typeof js_includes !== 'undefined') { %>
    <% for(var i=0; i < js_includes.length; i++) { %>
    <script src="<%= js_includes[i] %>"></script>
    <% }%>
    <% }%>
</head>
<body style="background-color:honeydew;">

<nav class="navbar navbar-inverse"><!--navbar-fixed-top-->
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Sixth Man</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <!--<li><a href="/">Home</a></li>-->
                <% if(typeof data.first_name != "undefined") { %>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Games
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/game/all">All</a></li>
                        <li><a href="/game/create"><span class="glyphicon glyphicon-plus"/></a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Courts
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/court/all">All</a></li>
                        <li><a href="/court/create"><span class="glyphicon glyphicon-plus"/></a></li>
                    </ul>
                </li>
                <% } %>

                <li><a href="/about">About</a></li>
            </ul>
            <% if(typeof data.first_name == "undefined") { %>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
            <% } else { %>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/player/?PlayerID=<%= data.PlayerID %>"><%= data.first_name %> <%= data.last_name %></a></li>
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
            <% } %>
        </div>
    </div>
</nav>